{
  "name": "firstsight",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn run typeorm migration:generate -n",
    "migration:create": "yarn run typeorm migration:create -n",
    "migration:run": "yarn run typeorm migration:run",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "6.10.11",
    "@nestjs/core": "6.10.11",
    "@nestjs/graphql": "6.5.3",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/passport": "6.1.1",
    "@nestjs/platform-express": "6.10.11",
    "@nestjs/typeorm": "6.2.0",
    "@types/bcrypt": "3.0.0",
    "@types/faker": "4.1.8",
    "@types/graphql-type-json": "0.3.2",
    "@types/ioredis": "4.14.2",
    "@types/passport-jwt": "3.0.3",
    "@types/transliteration": "1.6.6",
    "apollo-server-express": "2.9.13",
    "bcrypt": "3.0.7",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "faker": "4.1.0",
    "graphql": "14.5.8",
    "graphql-redis-subscriptions": "2.1.2",
    "graphql-subscriptions": "1.1.0",
    "graphql-tools": "4.0.6",
    "graphql-type-json": "0.3.1",
    "gravatar": "1.8.0",
    "ioredis": "4.14.1",
    "nestjs-config": "1.4.4",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "7.14.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.3",
    "transliteration": "2.1.7",
    "type-graphql": "0.17.5",
    "typeorm": "0.2.22",
    "typeorm-seeding": "1.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "6.12.9",
    "@nestjs/schematics": "6.7.6",
    "@nestjs/testing": "6.10.11",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.18",
    "@types/supertest": "2.0.8",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
