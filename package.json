{
  "name": "firstsight",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "6.11.1",
    "@nestjs/config": "0.1.0",
    "@nestjs/core": "6.11.1",
    "@nestjs/graphql": "6.5.3",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/passport": "6.1.1",
    "@nestjs/platform-express": "6.11.1",
    "@nestjs/typeorm": "6.2.0",
    "@types/bcrypt": "3.0.0",
    "@types/graphql-type-json": "0.3.2",
    "@types/gravatar": "1.8.0",
    "@types/passport": "1.0.2",
    "apollo-server-express": "2.9.16",
    "bcrypt": "3.0.7",
    "class-transformer": "0.2.3",
    "cos-nodejs-sdk-v5": "2.5.14",
    "crypto": "1.0.1",
    "graphql": "14.5.8",
    "graphql-tools": "4.0.6",
    "graphql-type-json": "0.3.1",
    "gravatar": "1.8.0",
    "ioredis": "4.14.1",
    "multer-aliyun-oss": "1.0.2",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pg": "7.17.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.4",
    "transliteration": "2.1.8",
    "type-graphql": "0.17.6",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.1",
    "@nestjs/schematics": "6.8.2",
    "@nestjs/testing": "6.11.1",
    "@types/express": "4.17.2",
    "@types/jest": "24.9.1",
    "@types/node": "13.5.0",
    "@types/supertest": "2.0.8",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.0.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
    "typescript": "3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/databases/(.*)": "<rootDir>/libs/databases/src/$1",
      "@app/databases": "<rootDir>/libs/databases/src",
      "@app/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@app/common": "<rootDir>/libs/common/src",
      "@app/qcloudcos/(.*)": "<rootDir>/libs/qcloudcos/src/$1",
      "@app/qcloudcos": "<rootDir>/libs/qcloudcos/src"
    }
  }
}
