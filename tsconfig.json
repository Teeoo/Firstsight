{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/common/database": [
        "libs/common/database/src"
      ],
      "@app/common/database/*": [
        "libs/common/database/src/*"
      ],
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/auth": [
        "libs/auth/src"
      ],
      "@app/auth/*": [
        "libs/auth/src/*"
      ],
      "@app/core": [
        "libs/core/src"
      ],
      "@app/core/*": [
        "libs/core/src/*"
      ],
      "@app/category": [
        "libs/category/src"
      ],
      "@app/category/*": [
        "libs/category/src/*"
      ],
      "@app/article": [
        "libs/article/src"
      ],
      "@app/article/*": [
        "libs/article/src/*"
      ],
      "@app/fields": [
        "libs/fields/src"
      ],
      "@app/fields/*": [
        "libs/fields/src/*"
      ],
      "@app/tags": [
        "libs/tags/src"
      ],
      "@app/tags/*": [
        "libs/tags/src/*"
      ],
      "@app/links": [
        "libs/links/src"
      ],
      "@app/links/*": [
        "libs/links/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}